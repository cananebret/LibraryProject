@model Library.Models.Entity.AUTHOR
@{
    ViewBag.Title = "AuthorFind";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("AuthorUpd", "Author", FormMethod.Post))
{
    <div style="margin-bottom:15px;"></div>
    <div class="form-group">
        <div style="margin-bottom:15px;">
            <label>Yazar Id</label>
            @Html.TextBoxFor(y => y.AUTHOR_ID, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px;">
            <label>Yazar Adı</label>
            @Html.TextBoxFor(y => y.AUTHOR_NAME, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px;">
            <label>Yazar Soyadı</label>
            @Html.TextBoxFor(y => y.AUTHOR_SURNAME, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px;">
            <label>Detay</label>
            @Html.TextAreaFor(y => y.DETAIL, new { @class = "form-control" })
        </div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}

