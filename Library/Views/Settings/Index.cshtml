@using Library.Models.Entity
@model List<ADMIN_SET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<section class="content" style="margin-top:60px">
    <div class="card">
        <div class="card-header">
            <center><h3 class="card-title">Admin ve Yetkileri</h3></center>

        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 1%">
                            #
                        </th>
                        <th style="width: 10%">
                            Kullanıcı Adı
                        </th>
                        <th style="width: 10%">
                            Durum
                        </th>
                        <th style="width: 10%">
                            Avatar
                        </th>
                        <th style="width: 8%" class="text-center">
                            Yetki
                        </th>
                        <th style="width: 8%" class="text-center">
                            Açıklama
                        </th>
                        <th style="width: 20%">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                    <tr>
                        <td>
                            @i.ID
                        </td>
                        <td>
                            <a>
                                @i.ADMIN_NAME
                            </a>
                        </td>
                        <td>Aktif</td>
                        <td>
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <img alt="Avatar" class="table-avatar" src="/AdminLTE-3.0.4//dist/img/avatar.png" style="height:100px">
                                </li>
                            </ul>
                        </td>
                        <td class="project-state">
                            <center> <span class="badge badge-success">@i.ADMIN_AUT</span></center>
                        </td>
                        <td class="project-state">
                            <center> <span class="badge badge-success">@i.ADMIN_DESCRIPTION</span></center>
                        </td>
                        <td class="project-actions text-right">
                            <a class="btn btn-info btn-sm" href="/Settings/AdminUpd/@i.ID">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Düzenle
                            </a>
                            <a class="btn btn-danger btn-sm" href="/Settings/AdminDel/@i.ID">
                                <i class="fa fa-trash-o">
                                </i>
                                Sil
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
<button class="btn btn-primary" data-toggle="modal" data-target="#modal1">Yeni Admin Ekle</button>


<div class="modal" id="modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Admin Ekleme Paneli</h2>
            </div>
            <form method="post" action="/Settings/NewAdmin/">
                <div class="modal-body">
                    <label>Kullanıcı Adı</label>
                    <input type="text" name="ADMIN_NAME" class="form-control" />
                    <br />
                    <label>Şifre</label>
                    <input type="text" name="ADMIN_PASSWORD" class="form-control" />
                    <br />
                    <label>Yetki</label>
                    <input type="text" name="ADMIN_AUT" class="form-control" />
                    <br />
                    <label>Açıklama</label>
                    <input type="text" name="ADMIN_DESCRIPTION" class="form-control" />
                    <br />
                    <button class="btn btn-success">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>