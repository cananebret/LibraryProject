@model Library.Models.Entity.BOOK
@{
    ViewBag.Title = "bookfind";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("bookUpd", "Book", FormMethod.Post))
{
    <div style="margin-bottom:15px;"></div>
    <div class="form-group">
        <div style="margin-bottom:15px;">
            <label>Kitap Id</label>
            @Html.TextBoxFor(k => k.BOOK_ID, new { @class = "form-control" })
        </div>
        <div stkle="margin-bottom:15px;">
            <label>Kitap Adı</label>
            @Html.TextBoxFor(k => k.BOOK_NAME, new { @class = "form-control" })
        </div>
        <div stkle="margin-bottom:15px;">
            <label>Kategori</label>
            @Html.DropDownListFor(k => k.CATEGORY.CATEGORY_ID, (List<SelectListItem>)ViewBag.ctdrp, new { @class = "form-control" })
        </div>
        <div stkle="margin-bottom:15px;">
            <label>Yazar Adı</label>
            @Html.DropDownListFor(k => k.AUTHOR1.AUTHOR_ID, (List<SelectListItem>)ViewBag.athdrp, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px;">
            <label>Basım Yılı</label>
            @Html.TextBoxFor(k => k.EDITION, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px;">
            <label>Yayın Evi</label>
            @Html.TextBoxFor(k => k.PUBLISER, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px;">
            <label>Sayfa Sayısı</label>
            @Html.TextBoxFor(k => k.PAGE, new { @class = "form-control" })
        </div>
        <button class="btn btn-warning">Güncelle</button>
      
    </div>
}

