
@model Library.Models.Entity.CATEGORY
@{
    ViewBag.Title = "CatFind";
    Layout = "~/Views/Shared/Layout.cshtml";
}



@using (Html.BeginForm("CatUpd", "Category", FormMethod.Post))
{
    <div style="margin-bottom :22px"></div>
    <div class="form-group">
        @*@Html.LabelFor(k=>k.CATEGORY_ID)*@
        <label>Id</label>
        @Html.TextBoxFor(k => k.CATEGORY_ID, new { @class = "form-control" })
        <br />
        @*@Html.LabelFor(k=>k.CATEGORY_NAME)*@
        <label>Kategori Adı</label>
        @Html.TextBoxFor(k => k.CATEGORY_NAME, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}

