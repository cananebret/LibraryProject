@model Library.Models.Entity.ACTION
@{
    ViewBag.Title = "lend";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>Üye Id</label>
        @Html.DropDownListFor(k => k.MEMBER1.MEMBER_ID, (List<SelectListItem>)ViewBag.memdrp, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitap Id</label>
        @Html.DropDownListFor(k => k.BOOK1.BOOK_ID, (List<SelectListItem>)ViewBag.bkdrp, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Personel</label>
        @Html.DropDownListFor(k => k.PERSONEL.PERSONEL_ID, (List<SelectListItem>)ViewBag.stffdrop, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitap Alış Tarihi</label>
        <input type="text" class="form-control" name="SHIP_DATE" value="@DateTime.Now.ToShortDateString()"/>
    </div>
    <div style="margin-top:15px">
        <label>Kitap İade Tarihi</label>
        <input type="text" class="form-control" name="RETURN_DATE" value="@DateTime.Now.AddDays(7).ToShortDateString()"/>
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-group" style="background-color:aqua">Kitabı ödünç ver</button>
        @*<input type="hidden"value="false" name="is_status"/>*@  
        @*sql tarafında otomatik false attıgı icin kapattım burda*@
    </div>
</form>
